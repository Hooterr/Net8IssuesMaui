             x:Class="Dotnet8IssuesMaui.MainPage">
    
    <Grid RowDefinitions="300,300,*" RowSpacing="8" Padding="8">
        <Frame Padding="8" Grid.Row="0">
            <Grid RowDefinitions="auto,auto,auto,*" RowSpacing="8">
                
                <Button Grid.Row="0" Text="B1"></Button>
                <Button Grid.Row="1" Text="B2"></Button>
                <Border Stroke="Red">
                    <Button Text="B3"></Button>
                </Border>
            </Grid>
        </Frame>
        
        <Frame Padding="8" Grid.Row="1">
            <Grid RowDefinitions="auto,auto" RowSpacing="8">
                
                <Button Grid.Row="0" Text="B1"></Button>
                <Button Grid.Row="1" Text="B2"></Button>
               
            </Grid>
        </Frame>
    </Grid>
    
</ContentPage>
